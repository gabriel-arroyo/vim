import turtle


def draw_circle_of_sqaures():
    draw_square(36)


def draw_figures():
    window = turtle.Screen()
    window.bgcolor("gray")
    draw_square()
    draw_circle()
    draw_triangle()
    window.exitonclick()


def draw_square(i):
    brad = turtle.Turtle()
    brad.shape("turtle")
    brad.color("green")
    brad.speed(5)
    for a in range(1, i):
        for a in [0, 1, 2, 3]:
            brad.forward(100)
            brad.right(90)
        brad.right(10)


def draw_circle():
    angie = turtle.Turtle()
    angie.shape("arrow")
    angie.color("blue")
    angie.circle(50)


def draw_triangle():
    john = turtle.Turtle()
    john.shape("arrow")
    john.color("red")
    for a in [0, 1, 2]:
        john.forward(100)
        john.right(120)


draw_circle_of_sqaures()
